@model ML.Auto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-12">
            <h2>Autos</h2>
            <h5> Visualizacion de una lista de Autos que fueron registrados en la base de datos. </h5>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("Form", "Auto")" class="btn btn-success">
                <i class="bi bi-person-plus-fill"></i>Agregar
            </a>
            <br />
            <br />
            <div class="table-responsive">

                @if (Model.Autos != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Año</th>
                                <th>Color</th>
                                <th>Kilometraje</th>
                                <th>NumeroPuertas</th>
                                <th>Transmision</th>
                                <th>Combustible</th>
                                <th>Precio</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Version</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (ML.Auto auto in Model.Autos)
                            {
                                <tr>
                                    <td>@auto.Año</td>
                                    <td>@auto.Color</td>
                                    <td>@auto.Kilometraje</td>
                                    <td>@auto.NumeroPuertas</td>
                                    <td>@auto.Transmisión</td>
                                    <td>@auto.Combustible</td>
                                    <td>@auto.Precio</td>
                                    <td>@auto.Marca.Nombre</td>
                                    <td>@auto.Modelo.Nombre</td>
                                    <td>@auto.Version.Nombre</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.MensajeError
                    </div>
                }
            </div>
        </div>
    </div>
</div>
